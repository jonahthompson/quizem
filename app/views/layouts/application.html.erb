<!DOCTYPE html>
<html>
  <head>
    <title>Quizem</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar nav">
     <%= link_to "Quizem", root_path, class: "navbar-brand brand" %>
      <div class="nav_list">
        <div class="nav-item">
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "link_color_white" %>
        </div>
        <% if current_user %>
        <div class="nav-item dropdown">
          <p class="dropdown-toggle link_color_white" data-toggle="dropdown">User
          <span class="caret"></span></a>
          <ul class="dropdown-menu dropdown_style">
            <li><%= link_to "Edit Profile", edit_user_registration_path(current_user), class: "link_color_white" %></li>
            <li><%= link_to "User Show", user_path(current_user), class: "link_color_white" %></li>
          </ul>
        </div>
        <% else %>
        <div class="nav-item">
          <%= link_to "Sign In", new_user_session_path, class: "link_color_white" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "link_color_white" %>
        </div>
        <% end %>
        <div class="nav-item">
          <%= link_to "Home", root_path, class: "link_color_white" %>
        </div>
      </div>
    </nav>
  	<div class="container-fluid">
	    <%= yield %>
			<p class="notice"><%= notice %></p>
	    <p class="alert"><%= alert %></p>
    </div>
  </body>
</html>
