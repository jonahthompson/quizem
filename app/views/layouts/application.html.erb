<!DOCTYPE html>
<html>
  <head>
    <title>Quizem</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Oswald" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar nav">
     <%= link_to "Quizem", root_path, class: "navbar-brand brand" %>
      <div class="nav_list">
        <% if current_user %>
        <div class="nav-item">
          <%= link_to destroy_user_session_path, method: :delete do %>
            <li class="link_color_white">Logout</li>
          <% end %>
        </div>
        <div class="nav-item dropdown">
          <p class="dropdown-toggle link_color_white" data-toggle="dropdown">User
          <span class="caret"></span></a>
          <ul class="dropdown-menu dropdown_style">
            <%= link_to quizzes_path do %>
              <li class="link_color_white">All Surveys</li>
            <% end %>
            <%= link_to edit_user_registration_path(current_user) do %>
              <li class="link_color_white">Edit Profile</li>
            <% end %>
            <%= link_to user_path(current_user) do %>
              <li class="link_color_white">User Profile</li>
            <% end %>
          </ul>
        </div>
        <div class="nav-item">
          <%= link_to root_path do %>
            <li class="link_color_white">Home</li>
          <% end %>
        </div>
        <% end %>
      </div>
    </nav>
  	<div class="container-fluid">
	    <%= yield %>
			<p class="notice"><%= notice %></p>
	    <p class="alert"><%= alert %></p>
    </div>
  </body>
</html>
